#!/bin/bash

set -euo pipefail

if [[ $* == *-j* ]]; then
    echo '{
  "desc": "Livepeer-packaged CockroachDB",
  "name": "Livepeer CockroachDB",
  "optional": {}
}'
    exit 0
fi

exec cockroach start-single-node --insecure --listen-addr=localhost:36257 --sql-addr=0.0.0.0:5432 --http-addr=127.0.0.1:18080 -s /data/cockroach
